<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LocationAdditionButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">260dp</item>
        <item name="android:maxWidth">320dp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="WeatherDetailsTextView">
        <item name="android:padding">@dimen/small_textview_padding</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>