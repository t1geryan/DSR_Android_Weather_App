<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WizardButtonStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:maxWidth">@dimen/max_button_width</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:padding">@dimen/radio_button_padding</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="WeatherDetailsTextView">
        <item name="android:padding">@dimen/small_textview_padding</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>